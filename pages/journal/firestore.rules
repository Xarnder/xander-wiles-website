rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId}/entries/{document=**} {
      // Allow access only if the authenticated user's UID matches the URL userId
      // Removing the specific email domain restriction as requested by the user indirectly
      // (User just wants it to work for them, but usually for personal projects we can just allow auth.uid check)
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
