rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId}/entries/{document=**} {
      // Allow access only if the authenticated user's UID matches the URL userId
      // AND the user's email belongs to the allowed domain
      allow read, write: if request.auth != null 
                          && request.auth.uid == userId
                          && request.auth.token.email.matches('.*@xanderwiles[.]com');
    }
  }
}
